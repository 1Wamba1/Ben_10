/**
 *
 * @author dalio
 */
public class Shelter {
    
        String name; 
        int invID, count, suplvl;
        double price;
    
        public Shelter(){
        
        }
        
        //Inventory
        public Shelter(String name, int invID, int count, int price, int suplvl){
       
        this.name = name;
        this.invID = invID;
        this.count = count;
        this.price = price;
        this.suplvl = suplvl;
        
}
        //What customers view
        public Shelter(int invID, double price){
        this.invID = invID;
        this.price = price;
        }
    
        @Override
    public String toString(){
        return "The ID for your cat is: " + invID 
                + " , you only bought: " + count + " animal, the price: $" + price 
                + ", supply level is: " + suplvl;
    }
    
   
    
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Shelter shelter = new Shelter();
        Shelter cat = new Cat();
        Shelter dog = new Dog();
        Shelter[] addCat = new Cat[3];
        Shelter[] addDog = new Dog[3];
        
        Random r = new Random();
               
        int random = r.nextInt(99999);
        
        addCat[0] = new Cat("Short Hair Domestic", "Grey/White");
        addCat[0].invID = random;
        addCat[0].suplvl = 10;
        addCat[0].count = 1;
        addCat[0].price = 25.99;
        System.out.println(addCat[0].toString());
        
        cat = new Cat("Long Hair Domestic", "Orange");
        String brown = "Brown";
        cat.invID = random;
        cat.count = 3;
        cat.price = 27.98;
        cat.suplvl = 5;
        System.out.println(cat.toString());
        
        addDog[0] = new Dog("Boxer", "Bow wow");
        addDog[0].invID = random;
        addDog[0].suplvl = 12;
        addDog[0].count = 5;
        addDog[0].price = 35.99;
        System.out.println(addDog[0]);
        
        dog = new Dog("Poodle", "Bark");
        dog.suplvl = 7;
        dog.invID = random;
        dog.count = 2;
        dog.price = 39.99;
        System.out.println(dog);
       
       
    }

   
    
}
